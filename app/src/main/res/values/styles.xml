<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="recycler_item">
        <item name="android:layout_margin">@dimen/low_margin</item>
        <item name="android:background">@color/colorBluish</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/low_padding</item>
    </style>
    <style name="item_text">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/colorUltraBlack</item>
    </style>
    <style name="text_view">
        <item name="android:textSize">@dimen/text_size_low</item>
        <item name="android:text">@string/text_view_test</item>
    </style>
    <style name="gravity">
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>